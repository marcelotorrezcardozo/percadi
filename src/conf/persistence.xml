<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="jpa" transaction-type="RESOURCE_LOCAL">
    <class>cl.inacap.percadi.model.Usuario</class>
    <class>cl.inacap.percadi.model.Discapacidad</class>
    <class>cl.inacap.percadi.model.Curriculum</class>
    <class>cl.inacap.percadi.model.Provincia</class>
    <class>cl.inacap.percadi.model.Ciudad</class>
    <class>cl.inacap.percadi.model.AntecedenteLaboral</class>
    <class>cl.inacap.percadi.model.TipoEstudio</class>
    <class>cl.inacap.percadi.model.Empresa</class>
    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/percadi"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value=""/>
      <property name="javax.persistence.schema-generation.database.action" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
